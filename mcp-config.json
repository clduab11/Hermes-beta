{
  "mcpServers": {},
  "serverConfiguration": {
    "timeout": 30000,
    "retryAttempts": 3,
    "logLevel": "INFO"
  },
  "security": {
    "tlsVersion": "1.3",
    "encryptionRequired": true,
    "auditLogging": true,
    "dataRetentionDays": 90,
    "certificateValidation": {
      "enabled": true,
      "trustedCAs": ["ca-certificates.crt"]
    },
    "cipherSuites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256",
      "TLS_AES_128_GCM_SHA256"
    ],
    "keyRotation": {
      "enabled": true,
      "rotationIntervalDays": 90,
      "automatic": true
    }
  },
  "compliance": {
    "hipaaCompliant": true,
    "gdprCompliant": true,
    "legalDisclaimer": "This system is designed to assist with administrative tasks only and does not provide legal advice.",
    "confidentialityNotice": "All communications are confidential and protected by attorney-client privilege where applicable."
  }
}
